<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_back_delete"
    tools:context=".fragment.application.ApplicationDelete">

<!--    <data>-->
<!--        <variable name="ApplicationDelete" type="com.bignerdranch.android.quasar.fragment.application.ApplicationDelete"/>-->
<!--    </data>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="3dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtDeleteApplicationDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="Вы действительно хотите удалить заявку?"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDeleteApplicationDeleteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="Если Вы удалите заявку, то все данные по описанию проблемы будут стерты."
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_grey_line_delete" />

            <TextView
                android:id="@+id/txtApplicationDeleteYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/bright_blue"
                android:layout_marginTop="10dp"
                android:text="Да, удалить" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_grey_line_delete" />

            <TextView
                android:id="@+id/txtApplicationDeleteNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/bright_blue"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Нет, не удалять" />
        </LinearLayout>

</layout>
