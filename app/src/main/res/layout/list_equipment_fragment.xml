<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.equipment.ListEquipment">

    <data>
        <variable name="ListEquipment" type="com.bignerdranch.android.quasar.fragment.equipment.ListEquipment"/>
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/txtListEquipmentEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/ic_back_line_grey"
                android:textSize="21sp"
                android:text="Оборудование" />

            <TextView
                android:id="@+id/txtListEquipmentEquipmentWithTp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:paddingLeft="15dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:background="@drawable/ic_eq_with_tp"
                android:text="Оборудование с тех. поддержкой" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerListEquipmentEquipmentWithTp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="23dp"/>

            <TextView
                android:id="@+id/txtListEquipmentEquipmentWithoutTp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/ic_eq_without_tp"
                android:text="Оборудование без тех. поддержки" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerListEquipmentEquipmentWithoutTp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="23dp"/>


        </LinearLayout>
    </ScrollView>
</layout>